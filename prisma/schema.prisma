generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean? @default(false)
  authorId  Int?
  User      User?    @relation(fields: [authorId], references: [id])
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String?
  Post      Post[]
  passwordResetTokens PasswordResetToken[]
}

/// Content block for frontend sections
model ContentBlock {
  id          Int      @id @default(autoincrement())
  blockNumber Int      @unique
  name        String   @unique
  text        String?
  imageUrl    String?
  imagePublicId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum AlbumType {
  GENERAL
  BEFORE_AFTER
}

model Album {
  id        Int        @id @default(autoincrement())
  name      String
  slug      String     @unique
  type      AlbumType  @default(GENERAL)
  photos    GalleryPhoto[]
  pairs     BeforeAfterPair[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model GalleryPhoto {
  id        Int      @id @default(autoincrement())
  albumId   Int
  url       String
  publicId  String?
  title     String?
  description String?
  tag       String?  // üè∑Ô∏è –ú—ñ—Ç–∫–∞ –¥–ª—è —Ñ—ñ–ª—å—Ç—Ä–∞—Ü—ñ—ó: 'before', 'after', 'general'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  // Relations to before/after pairs
  beforePairs BeforeAfterPair[] @relation("BeforePhoto")
  afterPairs  BeforeAfterPair[] @relation("AfterPhoto")
}

model BeforeAfterPair {
  id            Int           @id @default(autoincrement())
  albumId       Int
  beforePhotoId Int
  afterPhotoId  Int
  label         String?
  collectionId  Int?          // üÜï ID –∫–æ–ª–µ–∫—Ü—ñ—ó (1, 2, 3...)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  album        Album         @relation(fields: [albumId], references: [id], onDelete: Cascade)
  beforePhoto  GalleryPhoto  @relation("BeforePhoto", fields: [beforePhotoId], references: [id], onDelete: Cascade)
  afterPhoto   GalleryPhoto  @relation("AfterPhoto", fields: [afterPhotoId], references: [id], onDelete: Cascade)
}

/// Token storage for password reset flow
model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Optional numeric code for email verification flow
  code      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Hero {
  id              Int      @id @default(autoincrement())
  title           String
  subtitle        String
  backgroundImage String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

/// Contact information section
model ContactInfo {
  id          Int      @id @default(autoincrement())
  title       String   // "–ó–≤'—è–∂—ñ—Ç—å—Å—è –∑ –Ω–∞–º–∏"
  description String?  // Description text
  phone       String   // Phone number
  workHours   Json?    // Work schedule as JSON object
  socialLinks Json?    // Social media links as JSON array
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/// Location information section
model LocationInfo {
  id          Int      @id @default(autoincrement())
  title       String   // "–î–µ –Ω–∞—Å –∑–Ω–∞–π—Ç–∏?"
  description String?  // Description text
  address     String   // Physical address
  phone       String   // Phone number
  viberLink   String?  // Viber link
  telegramLink String? // Telegram link
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/// Dental services categories
model ServiceCategory {
  id          Int       @id @default(autoincrement())
  categoryId  String    @unique // e.g., "01", "02", etc.
  mainTitle   String
  priceRange  String?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  services    Service[]
}

model Service {
  id            Int             @id @default(autoincrement())
  categoryId    Int
  type          String          // e.g., "Tooth", "Implant"
  name          String
  price         String?         // Price as string to handle ranges like "100-500"
  description   String?
  isActive      Boolean         @default(true)
  order         Int             @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  category      ServiceCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

/// About us section
model AboutUs {
  id          Int      @id @default(autoincrement())
  title       String?
  subtitle    String?
  description String?
  image       String?
  imagePublicId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/// Our specialization section
model Specialization {
  id          Int      @id @default(autoincrement())
  title       String?
  subtitle    String?
  description String?
  image       String?
  imagePublicId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

/// Public form submissions from website
model FormSubmission {
  id           Int       @id @default(autoincrement())
  name         String
  phone        String
  email        String?
  workType     String?
  message      String?
  consent      Boolean   @default(false)
  address      String?
  contactTime  String?
  source       Json?
  files        Json?
  locale       String?   @default("uk")
  userAgent    String?
  ip           String?
  createdAt    DateTime  @default(now())
}
